<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:clickable="true">

    <ImageView
        android:id="@+id/dollarPrihodIv"
        android:layout_width="70dp"
        android:layout_height="140dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:src="@drawable/ic_baseline_attach_money_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/removePrihodIv"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_baseline_delete_forever_24"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        style="@style/ImageColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/editPrihodIv"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:src="@drawable/ic_baseline_edit_24"
        style="@style/ImageColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/naslovPrihodTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        style="@style/TextColorStyle"
        app:layout_constraintEnd_toStartOf="@+id/removePrihodIv"
        android:layout_marginRight="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/kolicinaPrihodTv"
        style="@style/TextColorStyle"
        android:layout_width="wrap_content"
        android:layout_marginBottom="44dp"
        app:layout_constraintHorizontal_bias="0.156"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editPrihodIv"
        app:layout_constraintStart_toEndOf="@+id/dollarPrihodIv" />

</androidx.constraintlayout.widget.ConstraintLayout>